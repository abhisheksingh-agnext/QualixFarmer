<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <include layout="@layout/custom_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_grey"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="100">
                <!--row 1-->
                <com.google.android.material.textfield.TextInputLayout
                    fontPath="fonts/Poppins-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:boxBackgroundColor="@color/background_grey"
                    tools:ignore="MissingPrefix">

                    <TextView
                        fontPath="fonts/Poppins-Regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/father_name"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text="@string/warehouse_id"
                        android:textColor="?attr/colorPrimary"
                        tools:ignore="MissingPrefix" />

                    <Spinner
                        android:id="@+id/spWareId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--row 2-->
                <com.google.android.material.textfield.TextInputLayout
                    fontPath="fonts/Poppins-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:boxBackgroundColor="@color/background_grey"
                    tools:ignore="MissingPrefix">

                    <TextView
                        fontPath="fonts/Poppins-Regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text="@string/crop"
                        android:textColor="?attr/colorPrimary"
                        tools:ignore="MissingPrefix" />

                    <Spinner
                        android:id="@+id/spCropId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--row 3-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="15dp"

                    app:boxBackgroundColor="@color/background_grey">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text="@string/invoice_number"
                        android:textColor="?attr/colorPrimary" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvFarmCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="@string/invoice_number"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <!--row 4-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="15dp"

                    app:boxBackgroundColor="@color/background_grey">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text="@string/truck_number"
                        android:textColor="?attr/colorPrimary" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTruckNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="@string/truck_number"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <!--row 5-->
                <com.google.android.material.textfield.TextInputLayout
                    fontPath="fonts/Poppins-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:boxBackgroundColor="@color/background_grey"
                    tools:ignore="MissingPrefix">

                    <TextView
                        fontPath="fonts/Poppins-Regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text="@string/crop_variety"
                        android:textColor="?attr/colorPrimary"
                        tools:ignore="MissingPrefix" />

                    <Spinner
                        android:id="@+id/spCropVariety"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--row 6-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="15dp"
                    app:boxBackgroundColor="@color/background_grey">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text="@string/delivery_date"
                        android:textColor="?attr/colorPrimary" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvDeliverDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="@string/delivery_date"
                    android:paddingVertical="@dimen/_4sdp"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <!--row 7-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="15dp"
                    app:boxBackgroundColor="@color/background_grey">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text="@string/request_date"
                        android:textColor="?attr/colorPrimary" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvRequestDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="@string/request_date"
                    android:paddingVertical="@dimen/_4sdp"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />


                <Button
                    android:id="@+id/btnAddFarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:background="?attr/colorPrimary"
                    android:text="Add Warehouse"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />
            </LinearLayout>


        </ScrollView>


    </LinearLayout>

    <include
        android:id="@+id/loader"
        layout="@layout/layout_progress"
        android:visibility="gone" />


    <include
        android:id="@+id/noData"
        layout="@layout/no_text"
        android:visibility="gone" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>