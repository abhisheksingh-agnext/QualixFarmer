<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tea.scanDetail.ScanDetailActivity"
    android:background="?bgDark">
    <include layout="@layout/custom_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginVertical="@dimen/_8sdp"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >
    <!--Card 1-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardBackgroundColor="?bgLight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp"
            android:layout_gravity="right"
            android:gravity="right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="12/02/2020"
                    android:textColor="?textLight"
                    android:textSize="@dimen/_12sdp"
                    android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FLC"
                android:textColor="?textDark"
                android:textSize="@dimen/_14sdp" />
                <TextView
                    android:id="@+id/tvFLC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="235"
                    android:textColor="?textHighlight"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_16sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Garden"
                    android:textColor="?textLight"
                    android:textSize="@dimen/_12sdp" />
                <TextView
                    android:id="@+id/tvGarden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JOHRAT"
                    android:textColor="?textHighlight"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_16sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section"
                    android:textColor="?textLight"
                    android:textSize="@dimen/_12sdp" />
                <TextView
                    android:id="@+id/tvSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="section2"
                    android:textColor="?textHighlight"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_16sdp"/>
            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--Card 2-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardBackgroundColor="?bgLight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp"
            android:layout_gravity="right"
            android:gravity="right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LeafBud"
                    android:textColor="?textDark"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>
            <!--row 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="One Leaf Bud"
                    android:textColor="?textLight"
                    android:textSize="@dimen/_12sdp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvOneLeafBud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="?textHighlight"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <!--row 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Two Leaf Bud"
                    android:textColor="?textLight"
                    android:textSize="@dimen/_12sdp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvTwoLeafBud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="?textHighlight"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <!--row 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Three Leaf Bud"
                    android:textColor="?textLight"
                    android:textSize="@dimen/_12sdp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvThreeLeafBud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="?textHighlight"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--Card 3-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardBackgroundColor="?bgLight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp"
            android:layout_gravity="right"
            android:gravity="right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leaf Banjhi"
                    android:textColor="?textDark"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>
            <!--row 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="One Leaf Banjhi"
                    android:textColor="?textLight"
                    android:textSize="@dimen/_12sdp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvOneLeafBanjhi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textColor="?textHighlight"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <!--row 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Two Leaf Banjhi"
                    android:textColor="?textLight"
                    android:textSize="@dimen/_12sdp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvTwoLeafBanjhi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textColor="?textHighlight"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--Card 4-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardBackgroundColor="?bgLight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp"
            android:layout_gravity="right"
            android:gravity="right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Count"
                    android:textColor="?textDark"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>
            <!--row 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="One Bud Count"
                    android:textColor="?textLight"
                    android:textSize="@dimen/_12sdp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvOneBudCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textColor="?textHighlight"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <!--row 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="One Leaf Count"
                    android:textColor="?textLight"
                    android:textSize="@dimen/_12sdp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvOneLeafCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="?textHighlight"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <!--row 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Two Leaf Count"
                    android:textColor="?textLight"
                    android:textSize="@dimen/_12sdp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvTwoLeafCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="?textHighlight"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <!--row 4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="One Banjhi Count"
                    android:textColor="?textLight"
                    android:textSize="@dimen/_12sdp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvOneBanjhiCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="?textHighlight"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

            <!--Card 3-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cdSession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardBackgroundColor="?bgLight"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Section detail"
                            android:textColor="?textDark"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>
                    <!--row 1-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Season Id"
                            android:textColor="?textLight"
                            android:textSize="@dimen/_12sdp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/seasonId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_weight="1"
                            android:text="3"
                            android:textColor="?textHighlight"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>
                    <!--row 2-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Total Weight"
                            android:textColor="?textLight"
                            android:textSize="@dimen/_12sdp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tvTotalWeight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_weight="1"
                            android:text="3"
                            android:textColor="?textHighlight"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>
                    <!--row 3-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Area Covered"
                            android:textColor="?textLight"
                            android:textSize="@dimen/_12sdp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tvAreaCovered"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_weight="1"
                            android:text="3"
                            android:textColor="?textHighlight"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>